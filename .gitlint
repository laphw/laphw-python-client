# Gitlint configuration
# See: https://jorisroovers.github.io/gitlint/configuration/

[general]
# Ignore certain rules
ignore = body-is-missing

[title-max-length]
# Max title length
line-length = 72

[body-max-line-length]
# Max body line length
line-length = 80

[title-must-not-contain-word]
# Prevent certain words in titles
words = wip,WIP,fixup,squash

[body-min-length]
# Minimum body length (0 = no minimum)
min-length = 0

[title-match-regex]
# Enforce conventional commit format (optional)
# regex = ^(feat|fix|docs|style|refactor|test|chore|build|ci|perf|revert)(\(.+\))?: .{1,50}

[ignore-by-title]
# Ignore certain commit types
regex = ^(Merge|Revert)
